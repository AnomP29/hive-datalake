<configuration>
  <!-- PostgreSQL Metastore DB Config -->
  <property>
    <name>javax.jdo.option.ConnectionURL</name>
    <value>jdbc:postgresql://172.27.16.1:5432/metastore2</value>
  </property>

  <property>
    <name>javax.jdo.option.ConnectionDriverName</name>
    <value>org.postgresql.Driver</value>
  </property>

  <property>
    <name>javax.jdo.option.ConnectionUserName</name>
    <value>postgres</value>
  </property>

  <property>
    <name>javax.jdo.option.ConnectionPassword</name>
    <value>postgres</value>
  </property>

  <!-- Schema validation -->
  <property>
    <name>datanucleus.autoCreateSchema</name>
    <value>false</value>
  </property>

  <property>
    <name>datanucleus.fixedDatastore</name>
    <value>true</value>
  </property>

  <property>
    <name>datanucleus.autoCreateTables</name>
    <value>false</value>
  </property>

  <property>
    <name>hive.metastore.schema.verification</name>
    <value>true</value>
  </property>

  <!-- Thrift Metastore Server -->
  <property>
    <name>hive.metastore.thrift.bind.host</name>
    <value>0.0.0.0</value>
  </property>

  <property>
    <name>hive.metastore.port</name>
    <value>9083</value>
  </property>

  <!-- External clients must use a real hostname/IP, not 0.0.0.0 -->
  <property>
    <name>hive.metastore.uris</name>
    <value>thrift://172.18.0.2:9083</value>
  </property>

  <!-- Warehouse directory -->
  <property>
    <name>hive.metastore.warehouse.dir</name>
    <value>/user/hive/warehouse</value>
  </property>

  <!-- S3 / MinIO (s3a) config -->
  <property>
    <name>fs.s3a.access.key</name>
    <value>minioadmin</value>
  </property>

  <property>
    <name>fs.s3a.secret.key</name>
    <value>minioadmin</value>
  </property>

  <property>
    <name>fs.s3a.endpoint</name>
    <value>http://minio:9000</value>
  </property>

  <property>
    <name>fs.s3a.path.style.access</name>
    <value>true</value>
  </property>

  <property>
    <name>fs.s3a.connection.ssl.enabled</name>
    <value>false</value>
  </property>

  <property>
    <name>fs.s3a.impl</name>
    <value>org.apache.hadoop.fs.s3a.S3AFileSystem</value>
  </property>

  <property>
    <name>hive.root.logger</name>
    <value>DEBUG, console</value>
  </property>

  <property>
    <name>hive.metastore.transactional.event.listeners</name>
    <value>org.apache.hive.hcatalog.listener.DbNotificationListener</value>
  </property>

  <!-- Hive-server config -->
  <property>
    <name>hive.server2.thrift.bind.host</name>
    <value>0.0.0.0</value>
  </property>

  <property>
    <name>hive.server2.thrift.port</name>
    <value>10000</value>
  </property>

  <property>
    <name>hive.server2.transport.mode</name>
    <value>binary</value>
  </property>

  <!-- Optional logging directory -->
  <property>
    <name>hive.exec.local.scratchdir</name>
    <value>/tmp/hive</value>
  </property>

  <property>
    <name>hive.querylog.location</name>
    <value>/tmp/hive</value>
  </property>

  <property>
    <name>hive.txn.manager</name>
    <value>org.apache.hadoop.hive.ql.lockmgr.DbTxnManager</value>
  </property>

  <property>
    <name>hive.support.concurrency</name>
    <value>true</value>
  </property>

  <property>
    <name>hive.metastore.transactional</name>
    <value>true</value>
  </property>

  <property>
    <name>hive.metastore.notification.listener</name>
    <value>org.apache.hadoop.hive.metastore.messaging.EventMessageHandler</value>
  </property>

  <property>
    <name>hive.metastore.notification.polling.interval</name>
    <value>1000</value>
  </property>

  <property>
    <name>hive.metastore.event.db.notification.api.auth</name>
    <value>false</value>
  </property>

</configuration>
